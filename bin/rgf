#!/usr/bin/env python

import sys, os
sys.path.append(os.getcwd())

from rgf.core.runner import Runner, ProgressFormatter, Reporter
from rgf.core.examples import ExampleSuite


formatter = ProgressFormatter(sys.stdout)
reporter = Reporter(formatter)
runner = Runner(reporter)
suite = ExampleSuite.get_suite()

runner.run(suite, sys.argv[1])
